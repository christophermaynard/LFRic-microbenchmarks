#include "dino_type.h"
#include "array_alloc.h"

int main(){
  /* The file reader */
  dyno_type dino;
  /* Mesh sizes */
  int ncell_2d, nlayers;

  /* Mesh coluring */
  int ncolours;
  int *ncells_per_colour;
  int **cmap;

  /* cma sizes */
  int cma_bandwidth, cma_alpha, cma_beta, cma_gamma_m, cma_gamma_p;

  /* dofs and maps for space 1 */
  /* dof-maps for space 1 */
  int ndf1, undf1;
  int **map1;
  int *indirection_map;

  /* The actual data */
  double *data1, *data2, *answer, ***cma_matrix;

  dino_open(&dino);
  input_scalar(&dino, &ncolours);
  printf("cma HW:%d\n",ncolours);
  
  return 0;
}
